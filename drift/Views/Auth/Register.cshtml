@model drift.Models.Request.RegisterRequest

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Register" asp-controller="Auth" asp-anti-forgery="true">
    <div>
        <div>
            <label asp-for="Email">Введите Email</label><br/>
            <input type="text" asp-for="Email"/>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br/>
            <input asp-for="Password"/>
        </div>
        <div>
            <label asp-for="Role">Введите роль</label><br/>
            <input asp-for="Role"/>
        </div>
        <div>
            <input type="submit" value="Register"/>
        </div>
    </div>
</form>