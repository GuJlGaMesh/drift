@using drift.Models.Request
@model drift.Models.Request.RegisterRequest

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Register" asp-controller="Auth" asp-anti-forgery="true">
    <div>
        <div>
            <label asp-for="Email">Enter email</label><br/>
            <input type="text" asp-for="Email"/>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br/>
            <input asp-for="Password"/>
        </div>
        <div>
            <label asp-for="UserName">Enter username</label><br/>
            <input asp-for="UserName"/>
        </div>
        <div>
            <label asp-for="RoleEnum">Choose role</label><br/>
            <input id="user-role" type="radio" value="USER" asp-for="RoleEnum">
            <label for="user-role">User</label>
            <input id="organizer-role" type="radio" value="ORGANIZER" asp-for="RoleEnum">
            <label for="organizer-role">Organizer</label>
        </div>
        <div>
            <input type="submit" value="Register"/>
        </div>
    </div>
</form>